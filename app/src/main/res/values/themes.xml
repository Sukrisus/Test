<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.OriginClient" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Material Design 3 specific -->
        <item name="colorSurfaceVariant">@color/gray_100</item>
        <item name="colorOnSurfaceVariant">@color/gray_700</item>
        <item name="colorOutline">@color/gray_300</item>
        <item name="colorOutlineVariant">@color/gray_200</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.OriginClient.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.OriginClient.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.OriginClient.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.OriginClient.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.OriginClient.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.OriginClient.BodySmall</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.OriginClient.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/gray_900</item>
    </style>
    
    <style name="TextAppearance.OriginClient.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/gray_900</item>
    </style>
    
    <style name="TextAppearance.OriginClient.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/gray_900</item>
    </style>
    
    <style name="TextAppearance.OriginClient.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/gray_800</item>
    </style>
    
    <style name="TextAppearance.OriginClient.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/gray_700</item>
    </style>
    
    <style name="TextAppearance.OriginClient.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/gray_600</item>
    </style>

    <!-- Full screen theme for Minecraft launcher -->
    <style name="AppFullScreenTheme" parent="Theme.OriginClient">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>